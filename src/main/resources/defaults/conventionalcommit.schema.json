{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Commit types and scopes",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "types"
  ],
  "properties": {
    "types": {
      "$ref": "#/definitions/types"
    },
    "commonScopes": {
      "$ref": "#/definitions/commonScopes"
    },
    "footerTypes": {
      "$ref": "#/definitions/footerTypes"
    }
  },
  "definitions": {
    "types": {
      "additionalProperties": false,
      "patternProperties": {
        "^([a-zA-Z0-9-]+)$": {
          "$ref": "#/definitions/commitType"
        }
      }
    },
    "commonScopes": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^([a-zA-Z0-9-:]+)$": {
          "$ref": "#/definitions/commitScope"
        }
      }
    },
    "footerTypes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "pattern": "^(BREAKING[- ]CHANGE|[a-zA-Z0-9-]+)$",
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "commitType": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "scopes": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^([a-zA-Z0-9-:]+)$": {
              "$ref": "#/definitions/commitScope"
            }
          }
        }
      }
    },
    "commitScope": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        }
      }
    }
  }
}
